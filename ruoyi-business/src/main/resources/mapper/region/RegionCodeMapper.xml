<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.region.mapper.RegionCodeMapper">
    
    <resultMap type="RegionCode" id="RegionCodeResult">
        <result property="id"    column="id"    />
        <result property="regionCode"    column="region_code"    />
        <result property="regionName"    column="region_name"    />
    </resultMap>

    <sql id="selectRegionCodeVo">
        select id, region_code, region_name from cn_region_code
    </sql>

    <select id="selectRegionCodeList" parameterType="RegionCode" resultMap="RegionCodeResult">
        <include refid="selectRegionCodeVo"/>
        <where>  
            <if test="regionCode != null  and regionCode != ''"> and region_code = #{regionCode}</if>
            <if test="regionName != null  and regionName != ''"> and region_name like concat('%', #{regionName}, '%')</if>
        </where>
    </select>
    
    <select id="selectRegionCodeById" parameterType="Long" resultMap="RegionCodeResult">
        <include refid="selectRegionCodeVo"/>
        where id = #{id}
    </select>

    <insert id="insertRegionCode" parameterType="RegionCode" useGeneratedKeys="true" keyProperty="id">
        insert into cn_region_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="regionCode != null">region_code,</if>
            <if test="regionName != null">region_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="regionCode != null">#{regionCode},</if>
            <if test="regionName != null">#{regionName},</if>
         </trim>
    </insert>

    <update id="updateRegionCode" parameterType="RegionCode">
        update cn_region_code
        <trim prefix="SET" suffixOverrides=",">
            <if test="regionCode != null">region_code = #{regionCode},</if>
            <if test="regionName != null">region_name = #{regionName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRegionCodeById" parameterType="Long">
        delete from cn_region_code where id = #{id}
    </delete>

    <delete id="deleteRegionCodeByIds" parameterType="String">
        delete from cn_region_code where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>